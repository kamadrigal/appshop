    body:    'How are you? Nice greetings from Leipzig'
});

	}

     function sendMail() {
       cuerpo=cuerpo+"Total: ¢"+total+"\n";
       var link = "mailto:karlamv93@gmail.com"
             + "?cc=karlamv93@gmail.com"
             + "&subject=" + escape(asunto)
             + "&body=" + escape(cuerpo)
        ;

       window.location.href = link;
}
